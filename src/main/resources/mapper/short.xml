<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.banjjak.shorts.model.mapper.ShortMapper">

    <resultMap type="shortDto" id="short" >
        <result column="short_id" property="shortId"/>
        <result column="user_id" property="userId"/>
        <result column="region" property="region"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="like" property="like"/>
        <result column="dislike" property="dislike"/>
        <result column="file_path" property="filePath"/>
        <result column="thumbnail" property="thumbnail"/>
        <result column="create_date" property="createDate"/>
    </resultMap>

    <select id="findAll" resultType="list" resultMap="short">
        SELECT *
        FROM short
    </select>

    <select id="findById" parameterType="long" resultMap="short">
        SELECT *
        FROM short
        WHERE short_id = #{shortId}
    </select>

    <insert id="save" parameterType="shortDto">
        INSERT INTO short (user_id, region, title, content, recruits, dislike, file_path, thumbnail,create_date)
        VALUES (#{userId}, #{region}, #{title}, #{content}, #{recruits}, #{dislike}, #{filePath}, #{thumbnail},#{createDate})
    </insert>

    <update id="update" parameterType="shortDto">
        UPDATE short
        SET user_id = #{userId},
            region = #{region},
            title = #{title},
            content = #{content},
            recruits = #{recruits},
            dislike = #{dislike},
            file_path = #{filePath},
            thumbnail = #{thumbnail},
            create_time = #{createTime}
        WHERE short_id = #{shortId}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM short
        WHERE short_id = #{shortId}
    </delete>




</mapper>